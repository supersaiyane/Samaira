{
  "title": "EC2 Dashboard",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "EC2 CPU Utilization (30d)",
      "targets": [{ "expr": "avg by (instance)(ec2_cpu_utilization)" }]
    },
    {
      "type": "timeseries",
      "title": "EC2 Memory Utilization (30d)",
      "targets": [{ "expr": "avg by (instance)(ec2_memory_utilization)" }]
    },
    {
      "type": "barchart",
      "title": "EC2 Cost (Monthly by Instance Type)",
      "targets": [{ "expr": "sum by (instance_type)(increase(billing_cost_amount{service='EC2'}[30d]))" }]
    },
    {
      "type": "table",
      "title": "Top 10 Expensive EC2 Instances",
      "targets": [{ "expr": "topk(10, sum by (instance)(increase(billing_cost_amount{service='EC2'}[30d])))" }]
    },
    {
      "type": "stat",
      "title": "Rightsizing Recommendations (EC2)",
      "targets": [{ "expr": "rightsizing_recommendations_total{rec_type='Rightsize', service='EC2'}" }]
    },
    {
      "type": "gauge",
      "title": "Idle EC2 Instances",
      "targets": [{ "expr": "anomaly_idle_resource_total{service='EC2'}" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    }
  ],
  "schemaVersion": 36,
  "version": 1
}
